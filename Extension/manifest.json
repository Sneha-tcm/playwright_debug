{
  "manifest_version": 3,
  "name": "AI Autofill Extension1",
  "version": "1.0.0",
  "description": "Autofill forms using backend-provided JSON mappings and user-selected documents.",

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "assets/icon.png"
  },

  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },

  "options_page": "options/options.html",

  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "identity"
  ],

  "host_permissions": [
    "https://www.googleapis.com/*"
  ],

  "oauth2": {
    "client_id": "34886981519-nulbqqf8k4jb71a889vpva6j3eb61906.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.readonly"
    ]
  },

  "web_accessible_resources": [
    {
      "resources": [
        "picker/picker.html",
        "picker/*.html",
        "assets/*",

        "lib/mammoth.browser.min.js",
        "lib/pdf.min.js",
        "lib/pdf.worker.min.js",
        "lib/xlsx.full.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "externally_connectable": {
    "matches": []
  },

  "background": {
    "service_worker": "background/background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ]
}
